{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "shiny-app",
      "host": {
        "sourcePath": "/var/app/current/shiny-app"
      }
    },
    {
      "name": "nginx-proxy-conf",
      "host": {
        "sourcePath": "/var/app/current/proxy/conf.d"
      }
    }  
  ],
  "containerDefinitions": [
    {
      "name": "shiny-app",
      "image": "rocker/shiny-verse",
      "essential": true,
      "memory": 128,
      "mountPoints": [
        {
          "sourceVolume": "shiny-app",
          "containerPath": "/srv/shiny-server",
          "readOnly": true
        }
      ]
    },
    {
      "name": "nginx-proxy",
      "image": "nginx",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": [
        "shiny-app"
      ],
      "mountPoints": [
        {
          "sourceVolume": "awseb-logs-nginx-proxy",
          "containerPath": "/var/log/nginx"
        },
        {
          "sourceVolume": "nginx-proxy-conf",
          "containerPath": "/etc/nginx/conf.d",
          "readOnly": true
        }
      ]
    }
  ]
}